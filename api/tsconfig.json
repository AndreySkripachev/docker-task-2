{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "/",
    "outDir": "./build",
    "noImplicitAny": true,
    "target": "ES6",
    "module": "Node16",
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "app"
  },
  "include": [ "app/*" ],
  "exclude": [ "node_modules" ]
}
